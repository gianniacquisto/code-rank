<div class="form-container">
  <h2>Sign Up</h2>
  <%= form_with model: @user, class: "modern-form" do |form| %>
    <% if @user.errors.any? %>
      <div class="error-messages">
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :email_address %><br>
      <%= form.text_field :email_address, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :password %><br>
      <%= form.password_field :password, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation %><br>
      <%= form.password_field :password_confirmation, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.submit "Sign up", class: "nav-button" %>
    </div>
  <% end %>
</div>
